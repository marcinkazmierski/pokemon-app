<% if !notice.nil? %>
    <div class="alert alert-danger" role="alert">
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
      <%= notice %>
    </div>
<% end %>

<h1>All pokemons</h1>

<div class="row margins">
  <div class="col-sm-12">
    <label>
      JSON FORMAT:
    </label>
    <%= link_to 'Show JSON', {:controller => "pokemons", :action => "all", :format => :json}, :class => "btn btn-success" %>
  </div>
</div>

<table>
  <thead>
  <tr>
    <th>Lp.</th>
    <th>Name</th>
    <th>Lat</th>
    <th>Lng</th>
    <th>Last spawned at</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @pokemons.each.with_index do |pokemon, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= pokemon.name %></td>
        <td><%= pokemon.lat %></td>
        <td><%= pokemon.lng %></td>
        <td><%= pokemon.last_spawned_at %></td>
        <td><%= link_to 'Show', pokemon %></td>
        <td><%= link_to 'Edit', edit_pokemon_path(pokemon) %></td>
        <td><%= link_to 'Destroy', pokemon, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pokemon', new_pokemon_path %>
